generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

enum LobbyPhase {
    WAITING
    PLAYING
    REVEALING
    FINISHED
}

model User {
    id               Int     @id @default(autoincrement())
    clerkId          String  @unique
    email            String  @unique
    name             String?
    access_token     String?
    lobby            Lobby?  @relation(fields: [lobbyId], references: [id])
    lobbyId          Int?
    points           Int     @default(0)
    lastCorrectRound Int     @default(0)
    globalPoints     Int     @default(0)
}

model Lobby {
    id           Int        @id @default(autoincrement())
    users        User[]
    hostId       String
    round        Int        @default(0)
    rounds       Int
    phase        LobbyPhase @default(WAITING)
    roundEndsAt  DateTime?
    phaseEndsAt  DateTime?
    currentMusic String?
    playlistId   String?
    createdAt    DateTime   @default(now())
    updatedAt    DateTime   @updatedAt
}
